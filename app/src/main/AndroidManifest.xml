<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.mlaboratory.mcodelab">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".saveinstancestate.SaveInstanceStateActivity" />
        <activity
            android:name=".saveinstancestate.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".bitmapcompress.BitmapCompressActivity"
            android:label="@string/title_activity_bitmap_compress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".nativelib.NativeLibActivity"
            android:label="@string/title_activity_native_lib" />
        <activity
            android:name=".opengl.OpenGLES20Activity"
            android:label="@string/title_activity_open_gl" />
        <activity
            android:name=".statusbar.StatusBarActivity"
            android:label="@string/title_activity_status_bar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".databinding.DataBindingActivity"
            android:label="@string/title_activity_data_binding"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".ipc.BookManagerService"
            android:enabled="true"
            android:process=":remote" />

        <activity
            android:name=".ipc.IPCActivity"
            android:label="@string/title_activity_ipc"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.touch.LogTouchEventActivity"
            android:label="@string/title_activity_log_touch_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.touch.TouchActivity"
            android:label="@string/title_activity_touch"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.viewgroup.ViewGroupActivity"
            android:label="@string/title_activity_view_group"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>